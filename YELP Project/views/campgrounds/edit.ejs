<% layout('layouts/boilterplate') %>


<div class="row">
    <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= c.id %>?_method=PUT" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="campground[title]" class="form-control" value="<%= c.title %>">
                    <!-- campground[title] just means everything is stored under campground -->
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="campground[location]" class="form-control" value="<%= c.location %>">
                    <!-- campground[title] just means everything is stored under campground -->
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" id="image" name="campground[image]" class="form-control" value="<%= c.image %>">
                    <!-- campground[title] just means everything is stored under campground -->
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0" aria-label="price" aria-describedby="price-label" id="price" name="campground[price]" value="<%= c.price %>">
                    </div>
                </div>
                  
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" id="description" name="campground[description]" class="form-control"><%= c.description %></textarea>
                    <!-- campground[title] just means everything is stored under campground -->
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= c._id %>">Back to Campground</a>

        </div>
    
</div>
